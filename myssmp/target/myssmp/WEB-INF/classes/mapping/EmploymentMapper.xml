    <!-- 查询用户记录总数 -->
    <select id="selectCount" resultType="int">
		select count(*) from employment
	</select>


    <!-- 查询用户记录数量根据类型 -->
    <select id="selectCountById" parameterType="Map"  resultType="int">
		select count(*) from employment
        <if test="S_ID.toString()=='address'.toString()">
       where address like   "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='Professional'.toString()">
            where professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals =''
        </if>
        <if test="S_ID.toString()=='School'.toString()">
            where  school_id like  "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='Company'.toString()">
            where  company_name like  "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='ALL'.toString()">
        </if>
	</select>


    <!-- 查询用户记录数量根据类型 -->
    <select id="selectAllCountById"  parameterType="Map"  resultType="int">
        select count(*)  from employment
        <if test="S_ADDRESS_ID.toString()=='ALL'.toString()">
            <if test="S_Name !=null">
                where address like  "%"#{S_Name}"%" or (professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals ='')
                or school_id like  "%"#{S_Name}"%" or company_name like  "%"#{S_Name}"%" or meet_name like  "%"#{S_Name}"%" or career_address like "%"#{S_Name}"%"
            </if>
        </if>
        <if test="S_ADDRESS_ID.toString()!='ALL'.toString()">
            where career_address  LIKE "%"#{S_ADDRESS_ID}"%"
            <if test="S_Name.toString()!=NULL">
                and (address like  "%"#{S_Name}"%" or (professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals ='')
                or school_id like "%"#{S_Name}"%" or company_name like  "%"#{S_Name}"%" or meet_name like  "%"#{S_Name}"%" or career_address  like "%"#{S_Name}"%")
            </if>
        </if>
    </select>

    <!-- 根据搜索框ALL查询数据start 和size查询数据 -->
    <select id="selectAllEmploymentByType" parameterType="Map" resultMap="EmploymentBaseMap">
        select *
        from employment
        <if test="S_ADDRESS_ID.toString()=='ALL'.toString()">
            <if test="S_Name!=null">
                WHERE address like   "%"#{S_Name}"%"  or (professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals ='')
                or school_id like  "%"#{S_Name}"%" or company_name like  "%"#{S_Name}"%" or meet_name like  "%"#{S_Name}"%"  or career_address like "%"#{S_Name}"%"
            </if>
        </if>
        <if test="S_ADDRESS_ID.toString()!='ALL'.toString()">
            where career_address  LIKE "%"#{S_ADDRESS_ID}"%"
            <if test="S_Name.toString()!=NULL">
                and (address like  "%"#{S_Name}"%" or (professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals ='')
                or school_id like  "%"#{S_Name}"%" or company_name like  "%"#{S_Name}"%" or meet_name like  "%"#{S_Name}"%" or career_address like "%"#{S_Name}"%")
            </if>
        </if>
        order by meet_day desc
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>


    <!-- 根据分页数据start 和size查询数据 -->
    <select id="findByPage" parameterType="Map" resultMap="EmploymentBaseMap">
        select
        <include refid="Base_Column_List" />
        from employment e,company c
        where e.career_talk_id=c.career_talk_id
        order by e.meet_day desc
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <!-- 根据宣讲会ID查询数据 -->
    <select id="selectEmploymentById" parameterType="Map" resultMap="EmploymentBaseMap_ALL">
        select  *
        from employment e,company c
        where  e.career_talk_id=#{career_talk_id} and c.career_talk_id  =e.career_talk_id
    </select>

    <!-- 根据分页查询数据start 和size查询数据 -->
    <select id="selectEmploymentByType" parameterType="Map" resultMap="EmploymentBaseMap">
        select
       <include refid="Base_Column_List" />
        from employment
        <if test="S_ID.toString()=='address'.toString()">
            where address like  "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='Professional'.toString()">
            where professionals LIKE "%"#{S_Name}"%" or professionals like '%不限专业%' or professionals =''
        </if>
        <if test="S_ID.toString()=='School'.toString()">
            where  school_id like  "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='Company'.toString()">
            where  company_name like  "%"#{S_Name}"%"
        </if>
        <if test="S_ID.toString()=='ALL'.toString()">
        </if>
         order by meet_day desc
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>
</mapper>